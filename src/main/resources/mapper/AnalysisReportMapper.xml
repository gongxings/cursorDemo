<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.javademo.mapper.AnalysisReportMapper">
    
    <resultMap id="BaseResultMap" type="com.demo.javademo.entity.AnalysisReport">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="type" property="type" />
        <result column="content" property="content" />
        <result column="creator_id" property="creatorId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id, title, type, content, creator_id, create_time, update_time
    </sql>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM analysis_report
        ORDER BY create_time DESC
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM analysis_report
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.demo.javademo.entity.AnalysisReport" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO analysis_report (title, type, content, creator_id)
        VALUES (#{title}, #{type}, #{content}, #{creatorId})
    </insert>
</mapper> 